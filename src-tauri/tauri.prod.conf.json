{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipify",
  "version": "0.1.0",
  "identifier": "com.suhailmalik.clipify",
  "build": {
    "beforeDevCommand": "NODE_ENV=production npm run dev",
    "devUrl": "https://clipify0.el.r.appspot.com/",
    "beforeBuildCommand": "NODE_ENV=production npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Clipify - Professional Text Cleanup Tool"
    },
    "windows": [
      {
        "title": "Clipify",
        "width": 800,
        "height": 600,
        "center": true,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "dev-api"]
    },
    "macOSPrivateApi": true
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "globalShortcut": {
      "all": true
    },
    "deep-link": {
      "schemes": ["clipify"]
    },
    "notification": {
      "identifier": "com.suhailmalik.clipify"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright Â© 2024 Suhail Malik. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Professional Text Cleanup Tool",
    "longDescription": "Clipify is a powerful desktop application that helps you clean up and rephrase text with AI assistance using global hotkeys.",
    "fileAssociations": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "allowDowngrades": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "wix": {
        "language": "en-US",
        "template": "main.wxs",
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "enableElevatedUpdateTask": false,
        "bannerPath": null,
        "dialogImagePath": null
      },
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"],
        "template": null
      }
    }
  }
}