{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipify",
  "version": "0.1.0",
  "identifier": "com.suhailmalik.clipify",
  "build": {
    "beforeDevCommand": "NODE_ENV=production npm run dev",
    "devUrl": "https://clipify0.el.r.appspot.com/",
    "beforeBuildCommand": "NODE_ENV=production npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Clipify",
        "width": 800,
        "height": 600,
        "center": true,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "dev-api"]
    },
    "macOSPrivateApi": true
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "globalShortcut": {
      "all": true
    },
    "deep-link": {
      "schemes": ["clipify"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}