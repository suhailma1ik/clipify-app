{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipify",
  "version": "0.1.0",
  "identifier": "com.suhailmalik.clipify",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:prod",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Clipify",
        "width": 800,
        "height": 600,
        "center": true,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "external-api"
      ]
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["clipify"]
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright Â© 2024 Suhail Malik. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Professional Text Cleanup Tool",
    "longDescription": "Clipify is a powerful desktop application that helps you clean up and rephrase text with AI assistance using global hotkeys.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "entitlements": "entitlements.plist",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "wix": {
        "language": "en-US"
      }
    }
  }
}
