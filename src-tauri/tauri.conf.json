{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipify",
  "version": "0.1.0",
  "identifier": "com.suhailmalik.clipify",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:prod",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Clipify - Professional Text Cleanup Tool"
    },
    "windows": [
      {
        "title": "Clipify",
        "width": 800,
        "height": 600,
        "center": true,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "external-api"
      ]
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "globalShortcut": {
      "all": true
    },
    "deep-link": {
      "schemes": ["clipify", "appclipify"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright Â© 2024 Suhail Malik. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Professional Text Cleanup Tool",
    "longDescription": "Clipify is a powerful desktop application that helps you clean up and rephrase text with AI assistance using global hotkeys.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "entitlements": "entitlements.plist",
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US",
        "template": "main.wxs",
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "enableElevatedUpdateTask": false,
        "bannerPath": null,
        "dialogImagePath": null
      }
    }
  }
}