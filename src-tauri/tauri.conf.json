{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipify",
  "version": "0.1.0",
  "identifier": "com.suhailmalik.clipify",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Clipify - Professional Text Cleanup Tool"
    },
    "windows": [
      {
        "title": "Clipify",
        "width": 800,
        "height": 600,
        "center": true,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
